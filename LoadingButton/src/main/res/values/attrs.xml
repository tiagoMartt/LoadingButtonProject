<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LoadingButton">
        <attr name="rippleColor" format="color" />
        <attr name="backgroundColor" format="color" />
        <attr name="strokeColor" format="color" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="cornerRadius" format="dimension" />
        <attr name="progressBarColor" format="color" />
        <attr name="android:text" format="string" />
        <attr name="android:textColor" format="color" />
        <attr name="android:fontFamily" />
        <attr name="android:textSize" format="dimension" />
        <attr name="android:textAlignment" />
        <attr name="android:textAllCaps" format="boolean" />
        <attr name="imageSrc" format="reference|color"/>
        <attr name="imageTint" format="color" />
        <attr name="imageScaleType" format="enum">
            <enum name="centerCrop" value="6"/>
            <enum name="center" value="5"/>
            <enum name="fitCenter" value="3"/>
            <enum name="centerInside" value="7"/>
            <enum name="fitEnd" value="4"/>
            <enum name="fitStart" value="2"/>
            <enum name="fitXY" value="1"/>
            <enum name="matrix" value="0"/>
        </attr>
        <attr name="state" format="enum">
            <enum name="normal" value="1"/>
            <enum name="loading" value="2"/>
            <enum name="disabled" value="3"/>
        </attr>
    </declare-styleable>
</resources>